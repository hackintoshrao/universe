{
   "id":"{{service.name}}",
   "cpus":1,
   "mem":128,
   "disk":0,
   "instances":1,
   "container":{
      "type":"DOCKER",
      "volumes":[
	    {
                "containerPath": "/export",
                "hostPath":"export/minio/data 
                "mode": "RW"
            },
            {
              "containerPath": "/root/.minio",
              "hostPath": "export/minio/config",
              "mode": "RW"
            }
      ],
      "docker":{
         "image":"{{resource.assets.container.docker.minio-docker-RELEASE}}",
         "network":"BRIDGE",
         "forcePullImage":true,
         "portMappings":[
            {
               "containerPort":0,
               "hostPort":9000,
               "protocol":"tcp"
            }
         ]
      }
   },
   "args":[
      "server",
      "/export"
   ],
   "healthChecks":[
      {
         "protocol":"HTTP",
         "portIndex":0,
         "path":"/",
         "gracePeriodSeconds":5,
         "intervalSeconds":20,
         "maxConsecutiveFailures":3
      }
   ]
}
